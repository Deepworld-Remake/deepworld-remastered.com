{
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [{
      "source": "/faq**",
      "destination": "/Pages/faq.html"
    }, {
      "source": "/codex**",
      "destination": "/Pages/codex.html"
    }, {
      "source": "/items**",
      "destination": "/Pages/items.html"
    }, {
      "source": "/game**",
      "destination": "/Pages/game.html"
    }, {
      "source": "**",
      "destination": "/index.html"
    }]
  }
}
